{

  "manifest_version": 2,
  "name": "Password Reuse Manager",
  "version": "0.1",

  "description": "Here comes my description",
  "homepage_url": "https://gitlab.lrz.de/fuasmattn/password-reuse-manager",
  "icons": {
    "48": "icons/icon-48.png"
  },

  "permissions": [
    "activeTab",
    "storage",
    "history",
    "webRequest",
    "<all_urls>"
  ],

  "content_scripts":[
    {
      "matches": ["<all_urls>"],
      "js": [
        "content_scripts/jquery.js",
        "content_scripts/psl.min.js",
        "content_scripts/form-detector.js", 
        "content_scripts/categorizer.js"],
      "css" : [
        "content_scripts/material-icons/material-icons.css",
        "content_scripts/inject.css"]
    }
  ],
  "background_page": "background/background.html",
  
  "chrome_ui_overrides": {
    "bookmarks_ui": {
      "remove_bookmark_shortcut": true,
      "remove_button": true
    }
  },

  "background": {

    "scripts": ["background/background.js"],
    "page": ["background/background.html"]
  },

  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "PWRM",
    // "default_popup": "popup/popup_default.html"
    "default_popup": "popup/popup_simple.html"
  },



  "web_accessible_resources": [
    "content_scripts/hintbox_snippet.html",
    "content_scripts/material-icons/*"
  ]

}