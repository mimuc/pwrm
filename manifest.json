{

  "manifest_version": 2,
  "name": "Password Reuse Manager",
  "version": "0.1",

  "description": "Here comes my description",
  "homepage_url": "https://gitlab.lrz.de/fuasmattn/password-reuse-manager",
  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "<all_urls>"
  ],

  "content_scripts":[
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/jquery.js",
            "content_scripts/form-detector.js", 
             "content_scripts/categorizer.js"],
       "css" : ["content_scripts/inject.css"]
    }
  ],

  "background": {
  "scripts": ["background/background.js"],
  "page": ["background/background.html"]
},

  "browser_action": {
    "default_icon": "icons/border-48.png",
    "default_title": "PRM",
    "default_popup": "popup/popup_default.html"
  },

  "web_accessible_resources": [
  //
  ]

}